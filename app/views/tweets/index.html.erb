
<% if flash[:notice] %>
    <%= flash[:notice] %>
<% end %>

<% @tweets.each do |twe| %>
    
        <tr>
            <p>
            <td><%= twe.message %></td>
            
            <%= time_ago_in_words(Time.current)+"前" %>
            <td>
                <%= link_to '削除', "/tweets/#{twe.id}", method: :delete %>
                <%= link_to '表示', "/tweets/#{twe.id}" %>
                <%= link_to '編集', "/tweets/#{twe.id}/edit" %>
            </td>
            </p>
        </tr>
    
<% end %>
<p><%= link_to '新規追加', '/tweets/new' %></p>